#!@PERL@

use strict;
use warnings;

use Getopt::Long;
use TAP::Harness;


BEGIN {
    unshift(@INC, split(/,/, @perllibdirs@));
}


$| = 1;

my @testfiles;
my $profile;
my $help_needed;

my $opts_ok = GetOptions
    (
     'profile=s'   => \$profile,
     'help'        => \$help_needed,
    );

if( $opts_ok and scalar(@ARGV) > 0 )
{
    push( @testfiles, @ARGV );
}

if( not $opts_ok or scalar(@testfiles) == 0 or
    not defined($profile) )
{
    print STDERR
        ("Usage: $0 --profile=PROF.yaml [options] TESTFILE ...\n",
         "Options:\n",
         " --profile=PROF.yaml       test environment profile\n",
         " --help                    this help message\n",);
    exit(1);
}


foreach my $tf (@testfiles)
{
    if( not -r $tf )
    {
        die(sprintf
            ('Cannot read test file %s: no such file or directory', $tf));
    }
}


my $harness = TAP::Harness->new
    ({verbosity => 1,
      lib     => [ split(/,/, @perllibdirs@) ],
      test_args => [ $profile ]});

my $aggregator = $harness->runtests(@testfiles);

exit($aggregator->has_errors ? 1:0);


